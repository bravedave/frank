[mysqld]
# Case sensitivity settings - use case insensitive for dev compatibility
# 0 = case sensitive (Linux default, but requires case-sensitive filesystem)
# 1 = case insensitive (Windows/macOS compatible) 
# 2 = case sensitive storage, case insensitive comparison
lower_case_table_names = 1

# Character set - for compatibility, consider using latin1 initially
# Then migrate to utf8mb4 after testing
character-set-server = latin1
collation-server = latin1_swedish_ci

# Networking
bind-address         = 0.0.0.0
skip_name_resolve    = 1
max_connections      = 200
sql_mode             = IGNORE_SPACE,NO_ENGINE_SUBSTITUTION

# MyISAM performance
key_buffer_size      = 8G         # ~50â€“70% of container RAM if MyISAM only
sort_buffer_size     = 8M
read_buffer_size     = 8M
read_rnd_buffer_size = 8M
table_open_cache     = 8000

# Query cache (ok for MyISAM heavy read workloads)
query_cache_type     = 1
query_cache_size     = 128M
query_cache_limit    = 4M

# Disable InnoDB fully
skip-innodb
default-storage-engine = MyISAM
